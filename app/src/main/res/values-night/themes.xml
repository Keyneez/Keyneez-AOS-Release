<resources>
    <!-- Base application theme. -->
    <style name="Theme.Keyneez" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray900</item>
        <item name="colorPrimaryVariant">@color/gray900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/gray900</item>
        <!-- Neutral Key Color -->
        <item name="colorOnBackground">@color/gray900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Remove font padding -->
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>