<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/layout_explore_collapsed"
        motion:constraintSetStart="@+id/layout_explore_expanded">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/rv_explore_popular"
            motion:touchAnchorSide="top" />

    </Transition>

    <ConstraintSet android:id="@+id/layout_explore_expanded">

        <Constraint
            android:id="@+id/layout_explore_expanded_background"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:background="@color/gray300"
            android:orientation="vertical"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/tv_explore_expanded_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="81dp"
            android:text="@string/explore_title"
            android:textColor="@color/gray900"
            motion:layout_constraintStart_toStartOf="@id/layout_explore_expanded_background"
            motion:layout_constraintTop_toTopOf="@id/layout_explore_expanded_background" />

        <Constraint
            android:id="@+id/btn_explore_expanded_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="11dp"
            android:background="@null"
            android:padding="12dp"
            android:src="@drawable/ic_search"
            motion:layout_constraintEnd_toEndOf="@id/layout_explore_expanded_background"
            motion:layout_constraintTop_toTopOf="@id/layout_explore_expanded_background" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/layout_explore_collapsed">
        <Constraint
            android:id="@+id/layout_explore_collapsed_background"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/gray300"
            android:elevation="10dp"
            android:orientation="vertical"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/tv_explore_collapsed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="153dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="152dp"
            android:elevation="10dp"
            android:text="@string/explore_title"
            android:textColor="@color/gray900"
            motion:layout_constraintBottom_toBottomOf="@id/layout_explore_collapsed_background"
            motion:layout_constraintEnd_toEndOf="@id/layout_explore_collapsed_background"
            motion:layout_constraintStart_toStartOf="@id/layout_explore_collapsed_background"
            motion:layout_constraintTop_toTopOf="@id/layout_explore_collapsed_background" />

        <Constraint
            android:id="@+id/btn_explore_collapsed_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="11dp"
            android:background="@null"
            android:padding="12dp"
            android:src="@drawable/ic_search"
            motion:layout_constraintEnd_toEndOf="@id/layout_explore_collapsed_background"
            motion:layout_constraintTop_toTopOf="@id/layout_explore_collapsed_background" />
    </ConstraintSet>
</MotionScene>