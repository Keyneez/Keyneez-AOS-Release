<resources>
    <!-- Base application theme. -->
    <style name="Theme.Keyneez" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray050</item>
        <item name="colorPrimaryVariant">@color/gray100</item>
        <item name="colorOnPrimary">@color/gray900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray400</item>
        <item name="colorSecondaryVariant">@color/gray200</item>
        <item name="colorOnSecondary">@color/gray500</item>
        <!-- Neutral color -->
        <item name="android:colorBackground">@color/gray100</item>
        <item name="colorOnBackground">@color/gray900</item>
        <item name="colorSurface">@color/gray050</item>
        <item name="colorOnSurface">@color/gray800</item>
        <item name="colorOnError">@color/red500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Remove font padding -->
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>