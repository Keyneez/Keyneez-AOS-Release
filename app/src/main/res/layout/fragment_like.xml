<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_like"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorBackground">

        <ImageView
            android:id="@+id/layout_like_toolbar"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:contentDescription="@string/explore_toolbar_contentdescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_like_title"
            style="@style/HeadingSemibold24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="81dp"
            android:text="@string/like_title"
            android:textColor="@color/gray900"
            app:layout_constraintStart_toStartOf="@id/layout_like_toolbar"
            app:layout_constraintTop_toTopOf="@id/layout_like_toolbar" />

        <TextView
            android:id="@+id/btn_like_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="11dp"
            style="@style/BodyMedium16"
            android:textColor="@color/gray600"
            android:text="@string/like_edit"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="@id/layout_like_toolbar"
            app:layout_constraintTop_toTopOf="@id/layout_like_toolbar" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:background="?android:colorBackground"
            android:paddingTop="1dp"
            android:paddingBottom="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_like_toolbar"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/gray900"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorHeight="2dp"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/gray900"
            app:tabTextAppearance="@style/SubtitleSemibold18"
            app:tabTextColor="@color/gray400" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_like"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_like_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
